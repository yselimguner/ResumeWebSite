
@using ResumeWebSite.Models.Entity
@model List<Education>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Education Page</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Number</th>
        <th>Description</th>
        <th>Class</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.Id</td>
    <td>@x.Number</td>
    <td>@x.Description</td>
    <td>@x.Class</td>
    <td>
        <a class="btn btn-info btn-sm" href="/Education/GetEdu/@x.Id">
            <i class="fas fa-pencil-alt">
            </i>
            Edit
        </a>
    </td>
    <td>
        <a class="btn btn-danger btn-sm" href="/Education/EducationDelete/@x.Id">
            <i class="fas fa-trash">
            </i>
            Delete
        </a>
    </td>
</tr>
    }
</table>
<br />

<a class="btn btn-primary btn-sm" href="/Education/EducationAdd">
    <i class="fas fa-folder">
    </i>
    Add New Education
</a>


