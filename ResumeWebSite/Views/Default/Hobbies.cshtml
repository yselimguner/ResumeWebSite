@using ResumeWebSite.Models.Entity
@model List<Hobbies>


<section id="blog" class="blog-mf sect-pt4 route">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="title-box text-center">
                    <h3 class="title-a">
                        Hobbies
                    </h3>
                    <div class="line-mf"></div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var x in Model)
            {

            <div class="col-md-4">
                <div class="card card-blog">
                    <div class="card-img">
                        <a href="#"><img src="@x.Images" alt="" class="img-fluid"></a>
                    </div>
                    <div class="card-body">
                        <div class="card-category-box">
                            <div class="card-category">
                                <h6 class="category">@x.Categories</h6>
                            </div>
                        </div>
                        <h3 class="card-title"><a href="#">@x.Title</a></h3>
                        <p class="card-description">
                            @x.Description
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="post-author">
                            <a href="#">
                                <img src="/devfolio-master/img/testimonial-2.jpg" alt="" class="avatar rounded-circle">
                                <span class="author">Yavuz Selim Güner</span>
                            </a>
                        </div>
                        <div class="post-date">
                            <span class="ion-ios-clock-outline"> @(((DateTime)x.Date).ToString("dd-MMM-yyy")) </span> 
                        </div>
                    </div>   
                </div>
            </div>
            }
        </div>
    </div>
</section>
