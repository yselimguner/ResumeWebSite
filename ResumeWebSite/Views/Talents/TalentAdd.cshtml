
@{
    ViewBag.Title = "TalentAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3>New Talent Add</h3>
<br />
<form method="post">
    <input type="text" name="Name" class="form-control" placeholder="Write to Talents Name" />
    <br />
    <textarea placeholder="Write to Talents Descriptions" name="Description" class="form-control" rows="4"></textarea>
    <br />
    <input type="text" name="TalentImage" class="form-control" placeholder="Write to TalentImage's Url'" />
    <br />
    <button class="btn btn-info btn-sm">
        <i class="fas fa-pencil-alt">
        </i>
        Edit
    </button>

</form>

