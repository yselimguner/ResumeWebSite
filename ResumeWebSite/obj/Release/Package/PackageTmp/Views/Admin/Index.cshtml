@using ResumeWebSite.Models.Entity
@model List<Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />
<h2>Admin Page</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Edit</th>
        <th>Remove</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Username</td>
            <td>
                <a class="btn btn-info btn-sm" href="/Admin/EditAdmin/@x.Id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Edit
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Admin/AdminDelete/@x.Id">
                    <i class="fas fa-trash">
                    </i>
                    Remove
                </a>
            </td>
        </tr>
    }
</table>
<br />

<a class="btn btn-primary btn-sm" href="/Admin/AdminAdd">
    <i class="fas fa-folder">
    </i>
    Add New Admin
</a>
