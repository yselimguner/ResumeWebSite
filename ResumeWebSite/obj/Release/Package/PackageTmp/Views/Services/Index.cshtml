
@using ResumeWebSite.Models.Entity
@model List<Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Services Page</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Icon</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var y in Model)
    {
<tr>
    <td>@y.Id</td>
    <td>@y.Name</td>
    <td>@y.Description</td>
    <td>@y.Icon</td>
    <td>
        <a class="btn btn-info btn-sm" href="/Services/UpdateService/@y.Id">
            <i class="fas fa-pencil-alt">
            </i>
            Edit
        </a>
    </td>
    <td>
        <a class="btn btn-danger btn-sm" href="/Services/ServiceDelete/@y.Id">
            <i class="fas fa-trash">
            </i>
            Delete
        </a>
    </td>
</tr>
    }
</table>
<br />

<a class="btn btn-primary btn-sm" href="/Services/ServiceAdd">
    <i class="fas fa-folder">
    </i>
    Add New Service
</a>
